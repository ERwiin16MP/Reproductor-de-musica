<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_marginTop="150dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/reproductor_de_musica"/>

    <TextView
        android:id="@+id/erwin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="ERwiin 16 MP"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_below="@+id/logo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="erwinmartinezperez@gmail.com"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/erwin"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/erwin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V1.2"
        android:id="@+id/version"
        android:textColor="@android:color/darker_gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/correo"
        android:layout_marginTop="20dp" />
</RelativeLayout>